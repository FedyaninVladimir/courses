<h1>Редактировать курс {{course.title}}</h1>
<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input name="title" placeholder="Placeholder" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса" data-success="right"></span>
    </div>
    <div class="input-field">
        <input name="price" placeholder="Placeholder" id="price" type="number" class="validate" value="{{course.price}}" required min="1">
        <label for="title">Цена курса</label>
        <span class="helper-text" data-error="Введите цену" data-success="right"></span>
    </div>
    <div class="input-field">
        <input name="img" placeholder="Placeholder" id="img" type="text" class="validate" value="{{course.img}}" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL" data-success="right"></span>
    </div>
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn btn-primary" type="submit">Редактировать курс</button>
</form>
<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn red">Удалить курс</button>
</form>
