<h1>Заказы</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="coll s6 offset-s3">
                <div class="cart">
                    <div class="cart-cintent">
                        <span class="cart-titile">
                            {{_id}}
                        </span>
                        <p>{{date}}</p> 
                        <p><em>
                            {{user.userId.name}}({{user.userId.email}})
                        </em></p>
                        <ol>
                            {{#each courses}}
                                <li>
                                    {{course.title}} (x<strong>{{count}}</strong>)
                                </li>
                            {{/each}}
                        </ol>
                        <hr>
                        <p>Цена: <span class="price"> {{price}}</span></p>
                    </div>
                </div>                 
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов пока нет </p>
{{/if}}