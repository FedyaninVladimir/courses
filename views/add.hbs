<h1>Добавить новый курс</h1>
<form action="/add" method="post">
    <div class="input-field">
        <input name="title" placeholder="Placeholder" id="title" type="text" class="validate" required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название курса" data-success="right"></span>
    </div>
    <div class="input-field">
        <input name="price" placeholder="Placeholder" id="price" type="number" class="validate" required min="1">
        <label for="title">Цена курса</label>
        <span class="helper-text" data-error="Введите цену" data-success="right"></span>
    </div>
    <div class="input-field">
        <input name="img" placeholder="Placeholder" id="img" type="text" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите URL" data-success="right"></span>
    </div>
    <button class="btn btn-primary" type="submit">Добавить курс</button>
</form>
