<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
            <li class="tab col s6"><a  href="#register">Регистрация</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h1>Войти в магазин</h1>
            <form action="/auth/login" method="post">
                <div class="input-field">
                    <input name="email" placeholder="email" id="email" type="email" class="validate" required>
                    <label for="title">email</label>
                    <span class="helper-text" data-error="Введите название email" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input name="password" placeholder="password" id="password" type="password" class="validate" required>
                    <label for="title">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль" data-success="right"></span>
                </div>
                <button class="btn btn-primary" type="submit">Войти</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
                    <h1>Регистрация</h1>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input name="name" placeholder="name" id="name" type="text" class="validate" required>
                    <label for="title">Имя</label>
                    <span class="helper-text" data-error="Введите имя" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input name="email" placeholder="email" id="remail" type="email" class="validate" required>
                    <label for="title">email</label>
                    <span class="helper-text" data-error="Введите название email" data-success="right"></span>
                </div>
                <div class="input-field">
                    <input name="password" placeholder="password" id="rpassword" type="password" class="validate" required>
                    <label for="title">Пароль</label>
                    <span class="helper-text" data-error="Введите пароль" data-success="right"></span>
                </div>
                  <div class="input-field">
                    <input name="confirm" placeholder="confirm" id="confirm" type="password" class="validate" required>
                    <label for="title">Повторите пароль</label>
                    <span class="helper-text" data-error="Введите пароль" data-success="right"></span>
                </div>
                <button class="btn btn-primary" type="submit">Регистрация</button>
            </form>
        </div>
    </div>
</div>